# Store Feedback System - Environment Variables
# Copy this to .env and fill in your values

# API Configuration
API_BASE_URL=http://localhost:20530

# MongoDB
MONGO_URI=mongodb://localhost:27017
DB_NAME=store_feedback

# File Storage
UPLOAD_DIR=./uploads
BASE_URL=http://localhost:8000

# Whisper.cpp (Transcription)
WHISPER_CLI=/opt/whisper.cpp/build/bin/whisper-cli
WHISPER_MODEL=/opt/whisper.cpp/models/ggml-medium.bin
WHISPER_LANG=hi

# Qwen3 API (AI Analysis)
QWEN_API_URL=https://kwen.tarsyer.com/v1/chat/completions
QWEN_API_KEY=Tarsyer-key-1
QWEN_TARGET_SERVER=BK
MAX_TOKENS=2048

# AI Analysis Prompts (Configurable)
QWEN_SYSTEM_PROMPT=You are an expert retail analyst. Analyze store staff feedback and extract structured insights. Your response MUST be valid JSON with exactly this structure: {"summary": "Brief 2-3 sentence summary", "tone": "positive/negative/neutral", "tone_score": 0.0-1.0, "products": [], "issues": [], "actions": [], "keywords": []}. Guidelines: summary=main points in 2-3 sentences, tone=overall sentiment, tone_score=numerical sentiment 0-1, products=specific names/brands/categories, issues=problems/complaints/challenges, actions=suggested actions/requests, keywords=key topics/themes. If a category has no items use empty array. Respond with valid JSON only, no additional text.

QWEN_USER_PROMPT=Analyze this store staff feedback transcription and extract structured insights:\n\n---\n{transcription}\n---\n\nRemember to respond with valid JSON only.

# Logging
LOG_QWEN_RESPONSES=true

# Worker Settings
POLL_INTERVAL=10

# Frontend
VITE_API_URL=https://store-feedback.tarsyer.com

# Authentication (Frontend - used during build)
VITE_STAFF_PASSWORD=staff123
VITE_MANAGER_PASSWORD=manager123
